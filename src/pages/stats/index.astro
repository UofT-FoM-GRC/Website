---
import BaseLayout from '../../layouts/BaseLayout.astro'
import NivoChartRenderer from '../../components/NivoChartRenderer'
import { MyLine } from '../../components/TEST'
import { TestComponent } from '../../components/TestComponent'
import { MyLineDebug } from '../../components/MyLineDebug'

// Example: This would come from your data analysis repository
// You can fetch this data from an API endpoint
const chartConfigs = [
	{
		type: 'line',
		data: [
			{
				id: 'Graduate Students',
				data: [
					{ x: '2020', y: 1200 },
					{ x: '2021', y: 1350 },
					{ x: '2022', y: 1450 },
					{ x: '2023', y: 1600 },
					{ x: '2024', y: 1750 }
				]
			}
		],
		margin: { top: 50, right: 110, bottom: 50, left: 60 },
		xScale: { type: 'point' },
		yScale: { type: 'linear', min: 'auto', max: 'auto', stacked: false, reverse: false },
		curve: 'monotoneX',
		colors: ['#1f2937'],
		pointSize: 8,
		pointColor: { theme: 'background' },
		pointBorderWidth: 2,
		pointBorderColor: { from: 'seriesColor' },
		axisBottom: { legend: 'Year', legendPosition: 'middle', legendOffset: 36 },
		axisLeft: { legend: 'Count', legendPosition: 'middle', legendOffset: -40 }
	}
]
---

<BaseLayout title="GRC Statistics" description="Statistics and analysis from the GRC data repository">
	<main>
		<section class="container mx-auto px-4 py-8">
			<h1 class="mb-8 text-center text-5xl font-bold">GRC Statistics</h1>
			<p class="mb-12 text-center text-lg text-gray-600">Financial and demographic data from our annual surveys</p>

			<div class="space-y-12">
				<TestComponent client:load />
				<div style="height: 500px; background: #f0f0f0;">
					<MyLineDebug client:load />
				</div>
			</div>
		</section>
	</main>
</BaseLayout>

<style>
	:global(html) {
		scroll-behavior: smooth;
	}
</style>

---
import { Image } from 'astro:assets'
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts'
import BaseLayout from '../layouts/BaseLayout.astro'
import { Icon } from 'astro-icon/components'

import FoM_Sky from '../assets/FoM_Sky.png'
import DataDriven from '../assets/DataDriven.jpg'
import SavingsPolicy from '../assets/SavingsPolicy.png'
import HelpingStudents from '../assets/HelpingStudents.png'
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION}>
	<main
		class="container mx-auto my-2 flex w-full flex-col items-center overflow-hidden rounded-xl text-justify shadow-lg"
	>
		<!-- Main Hero -->
		<section class="fade-in-section relative h-[50vh] min-h-[300px] w-full rounded-t-xl">
			<div class="absolute inset-0 bg-black/50 backdrop-blur-sm"></div>
			<div class="relative h-full w-full">
				<Image
					src={FoM_Sky}
					alt="Aerial view of University of Toronto Faculty of Medicine buildings"
					class="fade-in-image h-full w-full object-cover brightness-50"
					width={1920}
					height={1080}
				/>
			</div>
			<div class="fade-in-text absolute inset-0 flex flex-col items-center justify-center space-y-4">
				<p class="text-center text-xl font-bold text-white md:text-3xl">We are your</p>
				<h1 class="text-center text-5xl font-bold text-white md:text-6xl lg:text-7xl">
					Graduate Representation Committee
				</h1>
				<p class="text-center text-xl font-bold text-white md:text-3xl">at the</p>
				<p class="text-center text-xl font-bold text-white md:text-3xl">Faculty of Medicine</p>
				<p class="text-center text-xl font-bold text-white md:text-3xl">University of Toronto</p>
			</div>
		</section>

		<!-- Data-Driven Section -->
		<section class="fade-in-section relative flex min-h-120 w-full items-center bg-gray-800 py-20">
			<div class="container mx-auto px-4">
				<div class="flex flex-col items-center gap-8 md:flex-row">
					<div class="fade-in-text prose md:w-1/2">
						<h2 class="text-4xl font-bold text-white md:text-5xl lg:text-6xl">Data-Driven</h2>
						<p class="text-md mt-4 leading-relaxed text-gray-200 md:text-lg lg:text-xl">
							We turn your voice into data-driven insights to <strong class="text-white">advocate</strong> for your needs
							and enhancing your graduate experience.
						</p>
					</div>
					<div class="fade-in-image md:w-1/2">
						<Image
							src={DataDriven}
							alt="Illustration representing data-driven insights"
							width={500}
							height={300}
							class="h-auto w-full rounded-lg shadow-md"
						/>
					</div>
				</div>
			</div>
		</section>

		<!-- Accomplishments Section -->
		<section class="fade-in-section relative flex min-h-120 w-full items-center bg-slate-50 py-20">
			<div class="container mx-auto px-4">
				<div class="flex flex-col items-center gap-8 py-12 md:flex-row">
					<div class="fade-in-image md:w-1/2">
						<Image
							src={SavingsPolicy}
							alt="Data-Driven Insights"
							width={500}
							height={300}
							class="h-auto w-full rounded-lg"
						/>
					</div>
					<div class="fade-in-text prose md:w-1/2">
						<h2 class="text-4xl font-bold md:text-5xl lg:text-6xl">More For You</h2>
						<p class="text-md mt-4 leading-relaxed text-gray-700 md:text-lg lg:text-xl">
							Our efforts over the past 8 years have resulted in over <strong
								class="bg-linear-to-t from-slate-600 to-green-700 bg-clip-text text-4xl leading-relaxed font-bold text-transparent"
								>$1,000,000</strong
							>
							in savings for the graduate student body.
						</p>
					</div>
				</div>
			</div>
		</section>

		<!-- Student-Centric Section -->
		<section class="fade-in-section relative flex min-h-120 w-full items-center bg-slate-800 py-20">
			<div class="container mx-auto px-4">
				<div class="flex flex-col items-center gap-8 md:flex-row">
					<div class="fade-in-text prose md:w-1/2">
						<h2 class="text-4xl font-bold text-white md:text-5xl lg:text-6xl">Student-Centric</h2>
						<p class="text-md mt-4 leading-relaxed text-gray-200 md:text-lg lg:text-xl">
							Not all who wander are lost. We are here to help you find your way.
						</p>
						<p class="text-md mt-4 leading-relaxed text-gray-200 md:text-lg lg:text-xl">
							We regularly post information about events, resources, and opportunities for graduate students. Check out
							our <a href="/blog" class="text-lg font-bold text-blue-500">blog</a> as well as our <a
								href="/resources"
								class="text-lg font-bold text-blue-500">resources</a
							> pages for more information.
						</p>
					</div>
					<div class="fade-in-image md:w-1/2">
						<Image
							src={HelpingStudents}
							alt="Helping Students"
							width={500}
							height={300}
							class="h-auto w-full rounded-lg shadow-md"
						/>
					</div>
				</div>
			</div>
		</section>

		<!-- Contact Section -->
		<section class="fade-in-section relative flex min-h-120 w-full flex-col items-center bg-slate-50 py-20">
			<div class="container mx-auto px-4">
				<div class="fade-in-text flex flex-col items-center gap-8">
					<h2 class="text-4xl font-bold md:text-5xl lg:text-6xl">Contact Us</h2>
					<p class="text-md mt-4 leading-relaxed text-gray-700 md:text-lg lg:text-xl">
						Have questions or feedback? We'd love to hear from you!
					</p>
				</div>
				<!-- Contact Info -->
				<div class="mt-12 flex flex-col items-center gap-8">
					<div class="flex items-center gap-4">
						<Icon name="mdi:email" class="h-12 w-12 text-slate-700" />
						<div>
							<h3 class="text-2xl font-bold">Email</h3>
							<a href="mailto:grc.facmed@utoronto.ca" class="text-lg text-blue-500">grc.facmed@utoronto.ca</a>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
	<script>
		const handleIntersection: IntersectionObserverCallback = (entries, observer) => {
			entries.forEach((entry) => {
				if (entry.isIntersecting) {
					// console.log('is intersecting')
					entry.target.classList.add('visible')
					observer.unobserve(entry.target)
				}
			})
		}

		const options = {
			root: null,
			rootMargin: '0px 0px -50px 0px',
			threshold: 0.4
		}

		const observer = new IntersectionObserver(handleIntersection, options)

		const setUpIntersectionObserver = () => {
			const sections = document.querySelectorAll('.fade-in-section')
			sections.forEach((section) => {
				const image = section.querySelector('.fade-in-image')!
				const text = section.querySelector('.fade-in-text')!
				if (image) observer.observe(image)
				if (text) observer.observe(text)
			})
		}

		document.addEventListener('astro:page-load', () => {
			// console.log('page loaded')
			setUpIntersectionObserver()
		})

		document.addEventListener('DOMContentLoaded', () => {
			// console.log('DOMContentLoaded')
			setUpIntersectionObserver()
		})

		// Netlify Identity: Redirect to CMS after login
		// @ts-ignore - netlifyIdentity is loaded from external script
		if (window.netlifyIdentity) {
			// @ts-ignore
			window.netlifyIdentity.on('init', (user: any) => {
				if (!user) {
					// @ts-ignore
					window.netlifyIdentity.on('login', () => {
						document.location.href = '/admin/'
					})
				}
			})
		}
	</script>
</BaseLayout>

<style>
	.fade-in-section {
		opacity: 1;
		transition:
			opacity 0.5s ease-out,
			transform 0.5s ease-out;
	}

	.fade-in-image,
	.fade-in-text {
		opacity: 0;
		transform: translateY(20px);
		transition-delay: 0.5s;
		transition:
			opacity 0.5s ease-out,
			transform 0.5s ease-out;
	}

	.fade-in-image.visible {
		opacity: 1;
		transform: translateY(0);
	}

	.fade-in-text.visible {
		opacity: 1;
		transform: translateY(0);
		transition-delay: 0.2s;
	}
</style>

---
import BaseLayout from '../../layouts/BaseLayout.astro'
import { getCollection } from 'astro:content'
import BlogPostCard from '../../components/BlogPostCard.astro'

const posts = (await getCollection('blog'))
	.filter((post) => post.data.tags.includes('scholarships-bursaries-awards'))
	.sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
---

<BaseLayout title="Scholarships, Bursaries & Awards">
	<main class="container mx-auto min-h-screen px-4 py-8">
		<h1 class="mb-4 text-center text-4xl font-bold">Scholarships, Bursaries & Awards</h1>
		<!-- Add content for scholarships, bursaries & awards resources -->

		<div class="mb-4 border-l-4 border-yellow-500 bg-yellow-100 p-4 text-yellow-700" role="alert">
			<h2 class="mb-2 text-center text-2xl font-bold text-yellow-600">Work in Progress</h2>
			<p class="text-justify">
				The content for Scholarships, Bursaries & Awards is currently under development. We're working hard to bring you
				valuable information and resources. Please check back soon for updates!
			</p>
		</div>
		<section class="my-12">
			<h2 class="mb-4 text-center text-2xl font-bold">Blogs related to Scholarships, Bursaries & Awards</h2>
			<ul class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
				{posts.map((post) => <BlogPostCard post={post} />)}
			</ul>
		</section>
	</main>
</BaseLayout>
